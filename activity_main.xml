<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="20dp"
    tools:ignore="MissingDefaultResource">


    <EditText
        android:id="@+id/first_string_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:hint="@string/app_name"
        android:minHeight="48dp"
        android:textColorHint="#8D6E63"
        tools:ignore="DuplicateSpeakableTextCheck,TextFields" />

    <Button
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/button_swap"
        android:text="@string/swap_btn"
        android:onClick="onSwap"
        />

    <EditText
        android:id="@+id/second_string_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:hint="@string/app_name"
        android:minHeight="48dp"
        android:textColorHint="#8D6E63"
        tools:ignore="TextFields" />

        <Button
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button_check"
            android:text="@string/check_btn"
            android:onClick="onCheck"
                />

</LinearLayout>
